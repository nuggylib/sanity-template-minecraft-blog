{
  "private": true,
  "name": "sanity-template-minecraft-blog",
  "scripts": {
    "netlify:build-studio": "yarn \build && cd build && yarn install && yarn build-studio && cp studio/netlify.toml studio/dist",
    "build": "sanity-template build",
    "dev": "sanity-template watch",
    "lint-commit": "prettier-eslint \"{src/**/*,test/**/*,packages/**/*}.{ts,tsx}\" --eslint-config-path=.eslintrc.yml --write",
    "lint-build": "yarn build && (cd build && yarn install && yarn lint)",
    "setup": "yarn build && cd build && yarn install && yarn build",
    "test-studio": "cd build/studio && yarn dev",
    "prepare": "node -e \"if(require('fs').existsSync('.git')){process.exit(1)}\" || husky install"
  },
  "devDependencies": {
    "@sanity/types": "^2.10.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.1",
    "sanity-template": "^2.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "yarn lint-commit"
    ]
  }
}
